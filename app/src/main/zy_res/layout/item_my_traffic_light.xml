<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/peccancy_edit"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:gravity="left">

        <TextView
            android:id="@+id/item_road"
            style="@style/texystyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="路口" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:gravity="left">

        <TextView
            style="@style/texystyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="配置信息" />

        <TextView
            android:id="@+id/item_green_time_1"
            style="@style/texystyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="绿灯几秒" />

        <TextView
            android:id="@+id/item_yellow_time_2"

            style="@style/texystyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="50dp"
            android:text="绿灯几秒" />

        <TextView
            android:id="@+id/item_red_time_3"
            style="@style/texystyle"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="绿灯几秒" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="right">

        <TextView
            style="@style/texystyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人工控制" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:gravity="left">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <TextView
                style="@style/texystyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="横向状态" />

            <TextView
                android:id="@+id/item_change_time_heng"
                style="@style/texystyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="绿灯几秒" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <TextView

                style="@style/texystyle"

                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:text="纵向状态" />

            <TextView
                android:id="@+id/item_change_time_zong"
                style="@style/texystyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:text="绿灯几秒" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"></RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/hongdeng" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"

            android:src="@drawable/hongdeng" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_hengxaing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="50dp"
                android:layout_marginTop="50dp"
                android:paddingRight="50dp"
                android:text="横向" />

            <Button
                android:id="@+id/bt_zongxiang"
                android:layout_width="wrap_content"
                android:layout_marginBottom="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:text="纵向" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>