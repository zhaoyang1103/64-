<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">


        <ImageView
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:src="@drawable/touxiang_2" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/image"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXX"
                android:textColor="#000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/pname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXX"
                android:textColor="#000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/ptel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXX"
                android:textColor="#000"
                android:textSize="20dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="400dp"
            android:text="XXX"
            android:textColor="#000"
            android:textSize="20dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_guanliyuan"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="#FFC107"
                android:gravity="center"
                android:padding="10dp"
                android:text="一般管理员"
                android:textColor="#000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_shoucang"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/et_back_login"
                android:gravity="center"
                android:padding="10dp"
                android:text="已收藏"
                android:textColor="#000"
                android:textSize="20dp" />

        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/btn_shoucang"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/btn_shanchu"
        android:background="#00ff00"
        android:gravity="center"
        android:visibility="gone"

        android:padding="10dp"
        android:text="收藏"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/btn_shanchu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="#ff0000"
        android:gravity="center"
        android:visibility="gone"
        android:padding="10dp"
        android:text="删除"
        android:textColor="#000" />

</LinearLayout>