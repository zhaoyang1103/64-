<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#111" />

        <TextView
            android:id="@+id/ob11_lv_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="路口"
            android:textColor="#111"
            android:textSize="30dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#111" />

        <TextView
            android:id="@+id/ob11_lv_red_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="红灯时长(S)"
            android:textColor="#111"
            android:textSize="30dp" />


        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#111" />

        <TextView
            android:id="@+id/ob11_lv_yellow_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="黄灯时长(S)"
            android:textColor="#111"
            android:textSize="30dp" />


        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#111" />

        <TextView
            android:id="@+id/ob11_lv_green_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="绿灯时长(S)"
            android:textColor="#111"
            android:textSize="30dp" />


        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#111" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/ob11_lv_check"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ob9_check_bg"
                android:button="@null" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#111" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ob11_lv_setting"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="设置"
                android:textColor="#111"
                android:textSize="25dp" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#111" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#111" />
</LinearLayout>