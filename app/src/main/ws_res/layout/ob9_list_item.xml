<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ob9_tv_background"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ob9_lv_id"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="99"
            android:textColor="#111"
            android:textSize="30dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ob9_lv_chebiao"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/baoma" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ob9_tv_chepai"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="辽A10001"
                android:textColor="#111"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/ob9_tv_chezhu"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="车主：张三啊"
                android:textColor="#111"
                android:textSize="30dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/ob9_tv_balance"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="余额：999元"
            android:textColor="#111"
            android:textSize="30dp" />

        <CheckBox
            android:id="@+id/ob9_tv_check"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="120dp"
            android:background="@drawable/ob9_check_bg"
            android:button="@null" />

        <Button
            android:id="@+id/ob9_btn_chongzhi"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="充值"
            android:textColor="#111"
            android:textSize="30dp" />
    </LinearLayout>


</LinearLayout>