<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ob35_details"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/login" />

        <TextView
            android:id="@+id/ob35_details_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="景点介绍\n\t\t\t绝大多数的傻逼，都喜欢在节假日的时候去景点旅游，被挤成傻子还是要去，我都傻了我都"
            android:textColor="#111"
            android:textSize="25dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="300dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="游友点评"
                android:textColor="#111"
                android:textSize="25dp" />

            <com.mad.trafficclient.ws_java.ob35.Dianping_yuan
                android:id="@+id/ob35_dianping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></com.mad.trafficclient.ws_java.ob35.Dianping_yuan>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系电话"
                android:textColor="#111"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/ob35_phonenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="010-88888888"
                android:textColor="#111"
                android:textSize="25dp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>